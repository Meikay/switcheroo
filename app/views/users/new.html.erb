<h1>Sign up!</h1>

<%= form_for(@user) do |f| %>

<div>
    <%= f.label :username %>
    <%= f.text_field :username %>
</div><br><br>

<div>
    <%= f.label :email %>
    <%= f.email_field :email %>
</div><br><br>

<div>
    <%= f.label :age %>
    <%= f.text_field :age %>
</div><br><br>

<div>
    <%= f.label :password %>
    <%= f.password_field :password %>
</div><br><br>

<div>
    <%= f.submit "Sign In" %>
</div>

<% end %>