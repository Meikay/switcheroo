<h1>Edit <%= @item.item_name %> </h1>

<%= render partial: "layouts/errors", locals: {object: @item} %>

<%= form_for(@item) do |f| %>

    <%= f.label :item_name %>
    <%= f.text_field :item_name %>

    <%= f.label :item_description %>
    <%= f.text_area :item_description %>

    <%= f.submit %>

<% end %>

<%= link_to "Back", root_path %>
<%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: "Are you sure?" } %>