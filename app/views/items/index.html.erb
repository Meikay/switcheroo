
    <h2>Items (<%= @items.length %>)</h2>
                        <% @items.each do |item| %>
                            <li>
                                <%= link_to item_path (item) do%>
                                    <%= item.item_name %><br><br>
                                    <%= item.item_description %>
                                <% end %>    
                                    <h3>Listed by: <%= item.user.username %></h3>
                                    <%# check to see if current_user already rated an item %>
                                    <%# <% if !check_if_user_rated %> 
                                
                                    <button class="border-2 border-blue-500 hover:border-red-500 ...">
                                        <%= link_to "Add Rating", new_item_rating_path(item) %>
                                    </button>    
                                    
                                        <%= render item.ratings %>

                                <%# <% end %> 
                                <% if item.user == current_user %>
                                    <button class="border-2 border-blue-500 hover:border-red-500 ...">
                                        <%= link_to "Edit Item", edit_item_path(item.id)%>
                                    </button>
                                    <button class="border-2 border-red-500 hover:border-yellow-500 ...">
                                        <%= link_to "Delete", item_path(item.id), method: :delete, data: {confirm: "Are you sure?" } %>
                                    </button>
                                <% end %>
                            </li><br><br>
                        <% end %>
   
  

