<h2>My Items</h2>
<br><br>

<% @items.each do |item| %>
<div>
    <li>
        <%= item.item_name %>
        <%= item.item_description %>
        <br><br>
        
    </li>
     <% if item.user == current_user %>
        <h4><%= link_to "Edit Item", edit_item_path(item.id)%></h4>
        <%= link_to "Delete", item_path(item.id), method: :delete, data: {confirm: "Are you sure?" } %>
    <% end %>
    <br><br>
</div>
<% end %>

